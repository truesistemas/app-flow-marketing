{
  "name": "app-flow-marketing",
  "version": "1.0.0",
  "description": "SaaS de automação de mensagens para WhatsApp com Flow Builder",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:create": "tsx scripts/create-database.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "flow-builder",
    "saas",
    "multi-tenant"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^7.0.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^7.0.4",
    "@prisma/client": "^5.7.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/xlsx": "^0.0.35",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.3.4",
    "dotenv": "^16.6.1",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "pg": "^8.16.3",
    "socket.io-client": "^4.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.6",
    "@types/socket.io-client": "^1.4.36",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "prisma": "^5.7.1",
    "shadcn": "^3.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
